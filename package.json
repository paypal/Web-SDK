{
  "name": "@paypal/web-sdk-mono-repo",
  "version": "0.0.1",
  "private": true,
  "description": "[WIP] One merchant integration point for all of PayPal's services",
  "main": "index.js",
  "workspaces": [
    "asset-server",
    "demo",
    "frame-component",
    "sdk",
    "ui-components"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/paypal/Web-SDK.git"
  },
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "run-p dev:**",
    "dev:asset-server": "npm start --workspace=asset-server",
    "dev:demo": "npm run dev --workspace=demo",
    "lint": "npm run lint --workspaces --if-present",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "test": "npm run test --workspaces --if-present"
  },
  "keywords": [
    "paypal",
    "braintree",
    "payments"
  ],
  "author": "PayPal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/paypal/Web-SDK/issues"
  },
  "homepage": "https://github.com/paypal/Web-SDK#readme",
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "engines": {
    "npm": ">=8",
    "node": ">=16"
  }
}
